<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--  主页面中间的内容  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    style="@style/main_tv_style"
                    android:layout_marginLeft="80dp"
                    android:text="车内"/>
                <TextView
                    android:id="@+id/tv_temp"
                    style="@style/main_tv_style"
                    android:layout_marginLeft="10dp"
                    android:text="22"/>
                <TextView
                    style="@style/main_tv_style"
                    android:text="℃"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="65dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_speed"
                        style="@style/main_tv_style"
                        android:textColor="@color/tv_org"
                        android:text="55"/>
                    <TextView
                        style="@style/main_tv_style"
                        android:textColor="@color/tv_org"
                        android:text="KM/H"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    style="@style/main_tv_style"
                    android:layout_marginLeft="50dp"
                    android:text="差次"/>
                <TextView
                    style="@style/main_tv_style"
                    android:layout_marginLeft="10dp"
                    android:text="18"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/main_tv_style"
                        android:text="里程"/>
                    <TextView
                        style="@style/main_tv_style"
                        android:layout_marginLeft="10dp"
                        android:text="20"/>
                    <TextView
                        style="@style/main_tv_style"
                        android:text="km"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    style="@style/main_tv_style"
                    android:layout_marginLeft="65dp"
                    android:text="￥"/>
                <TextView
                    style="@style/main_tv_style"
                    android:layout_marginLeft="10dp"
                    android:text="512"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/main_tv_style"
                        android:text="金额 ￥ "/>
                    <TextView
                        style="@style/main_tv_style"
                        android:text="30"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_taxi_status"
                    style="@style/main_tv_style"
                    android:layout_width="127dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="65dp"
                    android:background="@drawable/car2"
                    android:gravity="center"
                    android:text="载客"/>
                <TextView
                    style="@style/main_tv_style"
                    android:layout_marginLeft="60dp"
                    android:textSize="20sp"
                    android:text="FM "/>
                <TextView
                    style="@style/main_tv_style"
                    android:textSize="20sp"
                    android:text="91.2"/>
                <TextView
                    style="@style/main_tv_style"
                    android:textSize="20sp"
                    android:text="MHz"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="70dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/main_tv_style"
                        android:text="1.5"/>
                    <TextView
                        style="@style/main_tv_style"
                        android:layout_marginLeft="10dp"
                        android:text="/km"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>